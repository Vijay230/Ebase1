<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/checkindate"
                    android:text="Checkin_date"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/checkoutdate"
                    android:text="Checkout_date"
                    android:textColor="#000000"
                    android:textSize="16sp"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Party"
                    android:id="@+id/party"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    android:gravity="center"
                    android:text="Phone"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mobile2"
                    android:textColor="#000"
                    android:id="@+id/mobile2"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="#000"
                    android:textSize="16sp"/>



                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/contactperson"
                    android:gravity="center"
                    android:text="Contact Person"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkin"
                    android:gravity="center"
                    android:text="Check In"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />


                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkintime"
                    android:gravity="center"
                    android:text="Checkintime"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkout"
                    android:gravity="center"
                    android:text="Check out"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkouttime"
                    android:gravity="center"
                    android:text="Checkout_time"
                    android:textColor="#000"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/state"
                    android:gravity="center"
                    android:text="State"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/city"
                    android:gravity="center"
                    android:text="City"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/area"
                    android:gravity="center"
                    android:text="Area"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                                      android:gravity="center"
                    android:text="Address"
                    android:id="@+id/address"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />



                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
android:id="@+id/category"
                    android:gravity="center"
                    android:text="Category"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Segment"
                    android:id="@+id/segment"
                    android:textColor="#000"
                    android:textSize="16sp"
                   />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/potential_pm"
                    android:gravity="center"
                    android:text="Potential PM"
                    android:textColor="#000"
                    android:textSize="16sp"
                     />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/order"
                    android:gravity="center"
                    android:text="Today Order"
                    android:textColor="#000"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderdetails"
                    android:gravity="center"
                    android:text="Order Detail"
                    android:textColor="#000"
                    android:textSize="16sp"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/remarks"
                    android:gravity="center"
                    android:text="Remarks"
                    android:textColor="#000"
                    android:textSize="16sp"/>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"/>


        </LinearLayout>



</LinearLayout>